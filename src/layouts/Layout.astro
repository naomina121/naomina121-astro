---
import "../styles/global.css";
import Footer from '@components/Footer.astro';
import Sidebar from '@components/Sidebar.astro';
import Sp from '@components/Sp.astro';
import StructuredBreadcrumbs from '@components/Breadcrumbs.astro';
const { pageTitle } = Astro.props;
const isIndex = Astro.url.pathname === "/";
const isThanks = Astro.url.pathname === "/thanks/";
const canonicalURL = new URL(Astro.url.pathname, 'https://naomina121.com');
const ogpImageURL = new URL('/nao2.jpg', canonicalURL);
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "naomina121",
  "url": "https://naomina121.com",
  "description": "ナオの公式サイトです。ブログ、音声ブログ、プロフィール、活動拠点などの情報を発信しています。",
};

let pageSchema = {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": pageTitle,
    "description": pageTitle + "のページです。",
    "url": canonicalURL.toString(),
    "inLanguage": "ja"
  };

const breadcrumbItems = isIndex
  ? [{ name: 'ホーム', item: Astro.site.origin + '/' }]
  : [
      { name: 'ホーム', item: Astro.site.origin + '/' },
      { name: pageTitle, item: canonicalURL.toString() }
    ];

const isContact = Astro.url.pathname.startsWith("/contact/");
const ga4TrackingCode = `
<script async src="https://www.googletagmanager.com/gtag/js?id=G-VGYCVR3R5F"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-VGYCVR3R5F');
</script>
`;
---
<!doctype html>
<html lang="ja">
  <head prefix="og: http://ogp.me/ns#">
  <script is:inline src="https://www.google.com/recaptcha/api.js"></script>
  <script is:inline>
  function onSubmit(token) {
    let form = document.getElementById('contact-form');
    if(form.reportValidity()) {
      form.submit();
    }
  }</script>

    <!-- Google tag (gtag.js) -->
    <Fragment set:html={ga4TrackingCode} />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:image" content={ogpImageURL} />
    {isThanks && <meta name="robots" content="noindex,nofollow" />}
    <link rel="sitemap" href="/sitemap-index.xml" />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(pageSchema)} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="canonical" href={canonicalURL.toString()} />
    <meta name="generator" content={Astro.generator} />
    <title>{isIndex ? pageTitle : `${pageTitle} | NAOMINA121`}</title>
  </head>
  <body>
    <div class="container flex justify-between items-start align-top mx-auto max-w-[1200px]">
    <Sp />
    <Sidebar />
    <slot />
    </div>
    <StructuredBreadcrumbs items={breadcrumbItems} />
    <Footer />
  </body>
</html>

