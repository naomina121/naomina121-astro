---
import Layout from "../../layouts/Layout.astro";
const { tag } = Astro.params;
const pageTitle = "タグ: " + tag;
const { posts } = Astro.props;
const filteredPosts = posts.filter((post) => post.frontmatter.tags?.includes(tag));
export async function getStaticPaths() {
  const allPosts = Object.values(import.meta.glob('../*/*.md', { eager: true }));
  const uniqueTags = [...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat())];
return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post: any) => post.frontmatter.tags.includes(tag));
    return {
        params: { tag },
        props: { posts: filteredPosts },
    };
    });
}
---
<Layout pageTitle={tag}>
  <main class="w-full max-w-6xl bg-[#1e1e1e] pb-[60px] px-16 border-l-[1px] border-[#3c3c3c]">
  <h1>タグ: {tag}</h1>
  <p class="mb-6">{tag}のタグが付いた記事</p>
  <ul>
    {filteredPosts.map((post: any) => <li class="list-disc ml-6 mb-2"><a href={post.url}>{post.frontmatter.title}</a></li>)}
  </ul>
  </main>
</Layout>